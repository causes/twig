- content_for :title do
  Commit Stats Over Past #{@days_ago} Days

%h2 #{@commit_set.count} commits
%table.table.table-striped.table-hover.table-bordered
  %thead
    %tr
      %th Total commits
      %th Author
      %th Breakdown by project
      %th &nbsp;
  %tbody
    - @commit_set.top_authors.each do |object|
      %tr
        %td= object[:commit_set].count
        %td
          %a{ href: name_to_slug(object[:author]) }= object[:author]
        %td= breakdown(object[:commit_set])
        %td
          %button.btn.btn-mini{ type: 'button',
            data: { toggle: 'modal', target: '#' + name_to_id(object[:author]) + '-details' }}
            Details
          .modal.hide.fade{ id: name_to_id(object[:author]) + '-details', tabindex: '-1' }
            .modal-header
              %button(type='button' class='close' data-dismiss='modal' aria-hidden='true')
                &times;
              %h3 Details for #{object[:author]}
            .modal-body
              %table.table.table-hover.table-bordered.table-condensed
                %tbody
                  - object[:commit_set].commits.each do |commit|
                    %tr
                      %td +#{commit.stat[:additions]}
                      %td -#{commit.stat[:deletions]}
                      %td
                        %code= commit.subject
                      %td [#{commit.repo.name}]
            .modal-footer
              %a(href='#' class='btn' data-dismiss='modal') Close
