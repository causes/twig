- content_for :title do
  Twigg
  %small
    %span{day_links}

%h2 Teams
.teams.well{ 'data-lazy-url' => teams_path(days: @days) }

%h2 Pairs
.pairs.well{ 'data-lazy-url' => pairs_path(days: @days) }

- if Twigg::Config.app.gerrit.enabled
  %h2 Gerrit
  .gerrit.well{ 'data-lazy-url' => gerrit_changes_path }

- if Twigg::Config.app.pivotal.enabled
  %h2 Pivotal
  .pivotal.well{ 'data-lazy-url' => pivotal_path }

%h2 Authors
.authors.well{ 'data-lazy-url' => authors_path(days: @days) }
