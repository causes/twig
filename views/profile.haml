- content_for :title do
  = @author

%ul.breadcrumb
  %li
    %a(href="/") Home
    %span.divider /
  %li.active= @author
%h2 Past #{number_with_delimiter @days} Days
%table.table.table-striped.table-hover.table-bordered
  %tbody
    %tr
      %th Total commits
      %td= number_with_delimiter(@commit_set.count)
    %tr
      %th Breakdown by project
      %td= breakdown(@commit_set)
#chart
  %svg
%script(src='/vendor/d3.v3.js')
%script(src='/vendor/nv.d3.min.js')
%script(src='/twigg.js')
:javascript
  Twigg.Profile.loadCommitsPerDay('#chart svg', #{@nvd3_data.to_json})
